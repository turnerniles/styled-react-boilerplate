{
    "name": "styled-react-boilerplate",
    "version": "1.0.0",
    "description": "Minimal & Modern boilerplate for building apps with React & styled-components",
    "scripts": {
        "start": "webpack-dev-server --hot --open --mode development",
        "build": "webpack --mode production",
        "now-build": "npm run build",
        "test": "xo && stylelint './src/**/*.js' && jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "main": "src/index.js",
    "repository": "https://github.com/xxczaki/styled-react-boilerplate",
    "author": "Antoni Kepinski",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-react": "^7.9.4",
        "@pieh/friendly-errors-webpack-plugin": "^1.7.0-chalk-2",
        "@testing-library/jest-dom": "^5.5.0",
        "@testing-library/react": "^10.0.2",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "clean-css-loader": "^2.0.0",
        "css-loader": "^3.4.2",
        "eslint-config-xo-react": "^0.23.0",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "extract-css-chunks-webpack-plugin": "^4.7.4",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.0.1",
        "jest": "^25.3.0",
        "script-ext-html-webpack-plugin": "^2.1.4",
        "stylelint": "^13.2.1",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "terser-webpack-plugin": "^2.3.5",
        "url-loader": "^4.0.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-nomodule-plugin": "^1.0.1",
        "webpack-pwa-manifest": "^4.2.0",
        "workbox-webpack-plugin": "^5.1.2",
        "xo": "^0.28.0"
    },
    "dependencies": {
        "@hot-loader/react-dom": "^16.13.0",
        "core-js": "^3.6.4",
        "modern-normalize": "^0.6.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-hot-loader": "^4.12.20",
        "styled-components": "^5.0.1"
    },
    "xo": {
        "nodeVersion": ">=10",
        "parser": "babel-eslint",
        "envs": [
            "node",
            "browser"
        ],
        "extends": "xo-react",
        "settings": {
            "react": {
                "version": "16.13"
            }
        },
        "rules": {
            "import/no-unassigned-import": "off",
            "import/no-extraneous-dependencies": "off",
            "unicorn/string-content": "off"
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/coverage/**",
            "!**/dist/**",
            "!**/sw.js",
            "!**/index.js"
          ],
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect",
            "<rootDir>/src/setupTests.js"
        ]
    }
}
